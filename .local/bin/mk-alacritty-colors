#!/usr/bin/env bash
# Generate ~/.config/alacritty/colors.yml from the active palette

set -euo pipefail

outfile="$HOME/.config/alacritty/colors.toml"
source "$HOME/.config/colors/current"        # pulls in COLOR0…COLOR15

cat > "$outfile" <<EOF
# Auto‑generated by mk‑alacritty‑colors on $(date --iso-8601=seconds)

[colors.primary]
background = "$COLOR15"
foreground = "$COLOR0"

[colors.normal]
black   = "$COLOR0"
red     = "$COLOR1"
green   = "$COLOR2"
yellow  = "$COLOR3"
blue    = "$COLOR4"
magenta = "$COLOR5"
cyan    = "$COLOR6"
white   = "$COLOR7"

[colors.bright]
black   = "$COLOR8"
red     = "$COLOR9"
green   = "$COLOR10"
yellow  = "$COLOR11"
blue    = "$COLOR12"
magenta = "$COLOR13"
cyan    = "$COLOR14"
white   = "$COLOR15"
EOF

echo "Wrote Alacritty colors to $outfile"


