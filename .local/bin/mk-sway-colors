#!/usr/bin/env bash
# Generate ~/.config/alacritty/colors.yml from the active palette

set -euo pipefail

outfile="$HOME/.config/sway/colors"
source "$HOME/.config/colors/current"        # pulls in COLOR0…COLOR15

cat > "$outfile" <<EOF
# Auto‑generated by mk‑alacritty‑colors on $(date --iso-8601=seconds)

set \$bg $COLOR15
set \$fg $COLOR0

# 8‑color set (optional, useful for borders/workspaces)
set \$black   $COLOR0
set \$red     $COLOR1
set \$green   $COLOR2
set \$yellow  $COLOR3
set \$blue    $COLOR4
set \$magenta $COLOR5
set \$cyan    $COLOR6
set \$white   $COLOR7

# Bright variants
set \$bblack   $COLOR8
set \$bred     $COLOR9
set \$bgreen   $COLOR10
set \$byellow  $COLOR11
set \$bblue    $COLOR12
set \$bmagenta $COLOR13
set \$bcyan    $COLOR14
set \$bwhite   $COLOR15

EOF

echo "Wrote Sway colors to $outfile"


