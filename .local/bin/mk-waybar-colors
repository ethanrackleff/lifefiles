#!/usr/bin/env bash
# Generate ~/.config/alacritty/colors.yml from the active palette

set -euo pipefail

outfile="$HOME/.config/waybar/colors.css"
source "$HOME/.config/colors/current"        # pulls in COLOR0…COLOR15

cat > "$outfile" <<EOF
/* Auto‑generated by mk‑waybar‑colors on $(date --iso-8601=seconds) */
@define-color bg $COLOR15; 
@define-color fg $COLOR0;
@define-color acc $COLOR5;
@define-color acc_fg $COLOR8;
@define-color green $COLOR2;
@define-color red $COLOR1;
EOF

echo "Wrote waybar colors to $outfile"


